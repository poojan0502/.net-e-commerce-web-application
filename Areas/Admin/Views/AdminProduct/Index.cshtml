@model IEnumerable<Group_Project.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Admin: Manage Products</h1>
<p>
    <a href="@Url.Action("Create", "AdminProduct", new { area = "Admin" })" class="btn btn-primary">Add New Product</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category?.CategoryName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="@Url.Action("Details", "AdminProduct", new { area = "Admin", id = product.ProductId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "AdminProduct", new { area = "Admin", id = product.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "AdminProduct", new { area = "Admin", id = product.ProductId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
