@model Group_Project.Models.Product
@{
    Layout = "_Layout";
}
<h1>Product Details</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageURL" alt="@Model.Name" style="max-width:200px;" />
        </dd>
    </dl>
    <a href="@Url.Action("Edit", "AdminProduct", new { id = Model.ProductId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index", "AdminProduct")" class="btn btn-secondary">Back to List</a>
</div>
