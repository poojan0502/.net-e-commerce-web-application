@model Group_Project.Models.Category
@{
    Layout = "_Layout";
}
<h1>Category Details</h1>
<dl class="row">
    <dt class="col-sm-2">Category Name</dt>
    <dd class="col-sm-10">@Model.CategoryName</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>
<p>
    <a href="@Url.Action("Edit", "AdminCategory", new { id = Model.CategoryId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index", "AdminCategory")" class="btn btn-secondary">Back to List</a>
</p>
