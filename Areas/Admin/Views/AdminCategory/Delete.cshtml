@model Group_Project.Models.Category
@{
    Layout = "_Layout";
}
<h1>Delete Category</h1>
<h3>Are you sure you want to delete this category?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post" asp-area="Admin">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "AdminCategory")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
