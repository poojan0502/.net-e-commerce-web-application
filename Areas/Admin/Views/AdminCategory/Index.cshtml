@model IEnumerable<Group_Project.Models.Category>
@{
    Layout = "_Layout";
}
<h1>Manage Categories</h1>
<p>
    <a href="@Url.Action("Create", "AdminCategory")" class="btn btn-primary">Add New Category</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a href="@Url.Action("Details", "AdminCategory", new { id = category.CategoryId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "AdminCategory", new { id = category.CategoryId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "AdminCategory", new { id = category.CategoryId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
