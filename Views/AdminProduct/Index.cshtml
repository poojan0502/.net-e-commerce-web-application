@model IEnumerable<Group_Project.Models.Product>
@{
    Layout = "_Layout";
}
<h1>Manage Products (Admin)</h1>
<div class="dropdown-menu dropdown-menu-right" aria-labelledby="adminDropdown">
    <a class="dropdown-item" href="/Admin/Index">Dashboard</a>
    <a class="dropdown-item" href="/AdminProduct/Index">Manage Products</a>
    <a class="dropdown-item" href="/Admin/Users">Manage Users</a>
    <a class="dropdown-item" href="/Admin/Orders">Manage Orders</a>
</div>
<p>
    <a href="@Url.Action("Create", "AdminProduct")" class="btn btn-primary">Add New Product</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category?.CategoryName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="@Url.Action("Details", "AdminProduct", new { id = product.ProductId })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Edit", "AdminProduct", new { id = product.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "AdminProduct", new { id = product.ProductId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
